{
  "name": "ai-presentation-generator",
  "version": "1.0.0",
  "description": "AI-powered professional PowerPoint presentation generator",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:client": "cd client && npm start",
    "dev:full": "concurrently \"npm run dev\" \"npm run dev:client\"",
    "build": "npm run build:client",
    "build:client": "cd client && npm install && npm run build",
    "install:all": "npm install && cd client && npm install",
    "postinstall": "npm run build:client"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "form-data": "^4.0.0",
    "helmet": "^7.1.0",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.20.1",
    "pptxgenjs": "^3.12.0",
    "canva-api": "^1.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  },
  "keywords": [
    "ai",
    "presentation",
    "powerpoint",
    "generator",
    "professional"
  ],
  "author": "AI Presentation Generator",
  "license": "MIT"
}
